

<p id="notice"><%= notice %></p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>


<h2>Comments</h2>

<% @post.comments.each do |comment| %>
	<p>
		<i><%= comment.content %></i>
	</p>
<% end %>
<%= render 'form', comment: @comment %>

<h1>Posts</h1>
<% @posts.each do |post| %>
	<ul>
		<li><%= post.content %></li>
	</ul>
<% end -%>

<h1>Link to image</h1>
<p>
<% @images.each do |image| %>
	<ul>
		<li><%= image.url %></li>
	</ul>
<% end -%>
</p>

<h1>List of comments</h1>
<p>
	<% @comments.each do |comment| %>
	<ul>
		<li>
		Comment for: <%= comment.commentable_type %> id: 
		<%= comment.commentable_id %>
		</li>
	</ul>
	</br>
		<%= comment.content %>
	</br>
	<% end %>
</p>

